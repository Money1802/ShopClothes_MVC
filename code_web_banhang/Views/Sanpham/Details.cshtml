@model code_web_banhang.Models.HangHoa

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_SpLayout.cshtml";
}

<div class="product__details__content">
   
        <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
                <div class="product__details__text">
                    <p>
                        <a href="~/images/@Model.Hinh" class="preview" title="@Model.TenHH">
                            <img id="@Model.MaHH" src="~/images/@Model.Hinh" width="300" height="350" />
                        </a>
                    </p>
                    <h4>@Model.TenHH</h4>
                    <h3>Giá: @String.Format("{0:0,0 VNĐ}", @Model.DonGia)</h3>
                    <p>
                        @Model.MoTa
                    </p>
                    <div class="product__details__cart__option">
                        <div class="quantity">
                            <a class="primary-btn" href="@Url.Action("ThemGioHang", "Cart", new { idAo = Model.MaHH, strURL = Request.Url.ToString() })">
                                Mua Ngay
                            </a>
                            <a class="primary-btn" href="@Url.Action("ShowSpAll", "Sanpham")">
                                Mua Tiếp
                            </a>
                        </div>
                    </div>
                    <div class="product__details__option">
                        <div class="product__details__option__size">
                            <span>Size:</span>
                            <label for="xxl">
                                xxl
                                <input type="radio" id="xxl">
                            </label>
                            <label class="active" for="xl">
                                xl
                                <input type="radio" id="xl">
                            </label>
                            <label for="l">
                                l
                                <input type="radio" id="l">
                            </label>
                            <label for="sm">
                                s
                                <input type="radio" id="sm">
                            </label>
                        </div>
                        <div class="product__details__option__color">
                            <span>Color:</span>
                            <label class="c-1" for="sp-1">
                                <input type="radio" id="sp-1">
                            </label>
                            <label class="c-2" for="sp-2">
                                <input type="radio" id="sp-2">
                            </label>
                            <label class="c-3" for="sp-3">
                                <input type="radio" id="sp-3">
                            </label>
                            <label class="c-4" for="sp-4">
                                <input type="radio" id="sp-4">
                            </label>
                            <label class="c-9" for="sp-9">
                                <input type="radio" id="sp-9">
                            </label>
                        </div>
                    </div>
                    <div class="product__details__cart__option">

                        <ul style="list-style: none">
                            <li>
                                <p>
                                    - Tình Trạng : @if (Model.SoLuong > 0)
                                    {
                                        @:Còn hàng
                                    }
                                    else
                                    {
                                        @:Hết hàng
                                    }
                                </p>
                            </li>
                            <li>
                                <p>- Chất Liệu : @Model.ChatLieu</p>
                            </li>
                            <li>
                                @*<p>
                        Có Size :
                        <select id="masize" name="masize">
                            @foreach (var item in Model.CTKICKCOSPs.Select(d => d.KICHCO))
                            {
                                <option value="@item.KICHCO1">@item.KICHCO1</option>
                            }
                        </select>
                    </p>*@
                            </li>
                            <li>
                                <p>
                                    - Vui lòng chọn size vừa với bạn xem hướng dẫn chọn size tại <a href="">đây</a>

                                </p>
                            </li>
                        </ul>


                    </div>
                </div>
        </div>
    </div>
</div>