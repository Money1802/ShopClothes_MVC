@model code_web_banhang.Models.TaiKhoan
@{
    ViewBag.Title = "FormLogin";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <center>
                            <h6 class="font-weight-light">Đăng nhập để tiếp tục.</h6>
                        </center>


                        @using (Html.BeginForm("Authen", "Login", FormMethod.Post))
                        {
                            <br />
                            if (ViewBag.error != null)
                            {
                                <span style="color:red; background-color:yellow; margin-left:50px;">@ViewBag.error</span>
                            }
                            <div class="input-field">
                                @Html.TextBoxFor(m => m.TenTaiKhoan, new { @class = "form-control", @required = "required", @autofocus = "autofocus", @placeholder = "Tên đăng nhập" })

                                <br />
                            </div>
                            <div class="input-field">
                                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", @required = "required", @placeholder = "Password" })

                            </div>
                            <br />
                            <div class="login-btn" style="margin-left:130px">
                                <button id="login" type="submit" class="btn btn-primary">Đăng Nhập</button>
                            </div>
                        }
                        <div class="my-2 d-flex justify-content-between align-items-center">
                            <div class="form-check">
                                <label class="form-check-label text-muted">
                                    <input type="checkbox" class="form-check-input">
                                    Nhớ mật khẩu
                                </label>
                            </div>
                            <a href="#" class="auth-link text-black">Quên mật khẩu?</a>
                        </div>
                        @*<div class="mb-2">
                                <div class="btn btn-block btn-facebook auth-form-btn">
                                    <a href="#"><i class="typcn typcn-social-facebook-circular mr-2"></i>Đăng nhập bằng facebook.</a>
                                </div>
                            </div>*@

                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
<!-- base:js -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.16/dist/sweetalert2.all.min.js"></script>
<!-- endinject -->
<!-- inject:js -->

<script>
    document.getElementById('login').addEventListener('click', function () {
        Swal.fire(
            'Chào mừng!',
            'Đăng nhập thành công!',
            'success'
        )
    })
</script>

